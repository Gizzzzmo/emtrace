{
    "$schema": "https://cmake.org/cmake/help/v3.28/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
    "version": 8,
    "include": [
        "common.json"
    ],
    "configurePresets": [
        {
            "name": "user-config",
            "hidden": true,
            "inherits": "gnu-flags",
            "generator": "Ninja",
            "binaryDir": "build/clang/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS": "-fdiagnostics-color=always",
                "CMAKE_CXX_FLAGS": "-fdiagnostics-color=always"
            }
        }
    ]
}
